<% include partials/header %>

    <div id="todobkg">
        <div id="frame">
            <ul class="content">
                <li class="todoTitle">
                    <h3>Todo List</h3>
                    <div class="dropdown">
                            <i class="fa fa-bars fa-lg" aria-hidden="true"></i>
                            <div class="dropdown-content">
                                <a  class="option" id='undoall' href="#">Undo all</a>
                                <a  class="option" id='finishall' href="#">Finish all</a>
                                <a  class="option" id='deleteall' href="/todo">Delete all</a>
                            </div>
                    </div>

                </li>
                <form action="todo/" method="post">
                    <input type="text" placeholder="Add an item" name="content">
                </form>
                <% todoList.forEach(function(item) {     %>
                    <li class="todoItems">
                        <span class="delete"><i class="fa fa-trash fa-lg"></i></span>
                        <span class="todoContent
                              <% if(item.status) { %>
                                 <%= 'done' %>
                              <% }%>"
                              id="<%= item._id %>"
                        >
                            <%= item.content %>
                        </span>
                    </li>
               <% }); %>
            </ul>
        </div>
    </div>

<script src="/javascripts/todo.js"></script>

<% include partials/footer %>